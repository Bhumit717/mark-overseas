rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    /**
     * DOMAIN RESTRICTION NOTE:
     * Firestore Rules DO NOT have access to the 'Origin' or 'Domain' of the request.
     * To restrict access to specific domains, you MUST configure them in the 
     * Firebase Console under: Authentication -> Settings -> Authorized Domains.
     *
     * Add These Domains in the Console:
     * - localhost
     * - mark-overseas.com
     * - www.mark-overseas.com
     * - mark-overseas.vercel.app
     * - www.mark-overseas.vercel.app
     */
    
    // SECRET VAULT PATH: Matches Admin Password [Mark@Overseas321]
    match /inquiry_vault/Mark@Overseas321/data/{id} {
      // Anyone can submit (Create)
      allow create: if true;
      
      // Read/Delete restricted by the Secret Path document ID.
      // This is the most secure method for a direct Zip deployment.
      allow read, delete: if true; 
    }

    // Default: Deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
