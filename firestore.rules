rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Inquiries: Anyone can submit.
    match /inquiries/{inquiryId} {
      allow create: if true;
      
      // ONLY AUTHENTICATED USERS CAN READ OR DELETE.
      // This is the only way to be 100% safe.
      allow read, delete: if request.auth != null && request.auth.token.email == 'markoverseas28@gmail.com'; 
    }

    // Admin Config: 100% Locked. Nobody can read/write except via console.
    match /settings/{docId} {
      allow read, write: if false;
    }
  }
}
