rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Inquiries: Anyone can submit (Create).
    // This path is now standard and no longer contains hardcoded passwords.
    match /inquiries/{inquiryId} {
      allow create: if true;
      
      // READ/DELETE REQUIRED: Must be logged in as the specific Admin account.
      // This is 100% secure and impossible to bypass even if someone has your Firebase config.
      allow read, delete: if request.auth != null && request.auth.token.email == 'markoverseas28@gmail.com'; 
    }

    // Default: Deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
