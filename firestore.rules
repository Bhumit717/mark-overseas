rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // THE PASSWORD PATTERN
    // Your password is: Mark@Overseas321
    // We store inquiries inside a document with this name.
    
    match /inquiry_vault/Mark@Overseas321/data/{id} {
      // Anyone can submit an inquiry
      allow create: if true;
      
      // ONLY those who know the "Secret Path" (the password) can read
      // This is hacker-proof because document IDs are not listable by default
      allow read, delete: if true; 
    }

    // Block everything else
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
