rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Inquiries: Anyone can submit.
    match /inquiries/{inquiryId} {
      allow create: if true;
      
      // ONLY AUTHENTICATED ADMIN CAN READ OR DELETE.
      // We check for the specific admin email directly in the rules.
      allow read, delete: if request.auth != null && request.auth.token.email == 'markoverseas28@gmail.com'; 
    }

    // Settings collection removed from rules as requested (instead of database).
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
