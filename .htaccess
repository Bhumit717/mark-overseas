# This script blocks HTTrack and other scrapers from downloading your secrets.

<FilesMatch "\.(js|php|json|env|sh|bak)$">
    # Block direct access to files that often contain secrets
    # This specifically protects creds.js and gmail_credentials.php
    <If "%{REQUEST_URI} =~ /creds|credentials|env|config/">
        Order allow,deny
        Deny from all
    </If>
</FilesMatch>

<Files "vercel.json">
    Order allow,deny
    Deny from all
</Files>

# Ensure PHP files are executed, not shown as text
<FilesMatch "\.php$">
    Order allow,deny
    Allow from all
</FilesMatch>
