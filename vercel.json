{
    "rewrites": [
        {
            "source": "/admin",
            "destination": "/admin.html"
        }
    ],
    "headers": [
        {
            "source": "/(api/creds.js|php/gmail_credentials.php)",
            "headers": [
                {
                    "key": "Cache-Control",
                    "value": "no-store"
                },
                {
                    "key": "Content-Type",
                    "value": "text/plain"
                }
            ]
        }
    ],
    "redirects": [
        {
            "source": "/api/creds.js",
            "destination": "/404",
            "permanent": false
        },
        {
            "source": "/php/gmail_credentials.php",
            "destination": "/404",
            "permanent": false
        }
    ]
}